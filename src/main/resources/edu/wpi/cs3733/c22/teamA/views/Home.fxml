                              <Insets />
                          </opaqueInsets>
                      </JFXButton>
                      <JFXButton fx:id="viewServiceRequestsButton" buttonType="RAISED" mnemonicParsing="false" onAction="#goToViewServiceRequest" prefHeight="27.0" prefWidth="186.0" styleClass="bodyFormat" text="View Existing Requests" textFill="WHITE" />
                      <JFXButton fx:id="equipmentTrackerButton" buttonType="RAISED" mnemonicParsing="false" onAction="#goToEquipmentTracker" prefHeight="27.0" prefWidth="186.0" styleClass="bodyFormat" text="View Equipment Tracker" textFill="WHITE" />
                      <JFXButton fx:id="locationDataButton" buttonType="RAISED" mnemonicParsing="false" onAction="#goToLocationData" prefHeight="27.0" prefWidth="186.0" styleClass="bodyFormat" text="View Locations (Table)" textFill="WHITE" />
                      <JFXButton fx:id="mapEditorButton" buttonType="RAISED" mnemonicParsing="false" onAction="#goToEditLocationData" prefHeight="27.0" prefWidth="186.0" styleClass="bodyFormat" text="Edit Locations (Map)" textFill="WHITE" />
                  </children>
              </VBox>
              <JFXButton fx:id="settingsButton" buttonType="RAISED" mnemonicParsing="false" onAction="#goToSettings" styleClass="bodyFormat" text="Settings" textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.valignment="TOP" />
              <JFXButton fx:id="exitButton" mnemonicParsing="false" onAction="#exitHome" snapToPixel="false" styleClass="bodyFormat" text="Log Out" textAlignment="CENTER" textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2" GridPane.valignment="BOTTOM" />
         </children>
      </GridPane>
    </children>
