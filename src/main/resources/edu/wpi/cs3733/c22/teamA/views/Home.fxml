    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="33.0" minHeight="25.0" prefHeight="33.0" />
        <RowConstraints maxHeight="375.0" minHeight="10.0" prefHeight="367.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
      <JFXHamburger fx:id="hamburger" prefHeight="33.0" prefWidth="74.0" GridPane.halignment="LEFT" GridPane.valignment="TOP" />
      <JFXDrawer fx:id="drawer" prefHeight="400.0" prefWidth="112.0" GridPane.rowIndex="1">
         <children>
            <VBox fx:id="menuBox" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <JFXButton fx:id="serviceRequestsButton1" mnemonicParsing="false" onAction="#goToCreateNewServiceRequest" prefHeight="44.0" prefWidth="214.0" text="New Service Request" textFill="WHITE" />
                  <JFXButton fx:id="mapEditorButton1" mnemonicParsing="false" onAction="#goToEditLocationData" prefHeight="44.0" prefWidth="224.0" text="Map" textFill="WHITE" />
