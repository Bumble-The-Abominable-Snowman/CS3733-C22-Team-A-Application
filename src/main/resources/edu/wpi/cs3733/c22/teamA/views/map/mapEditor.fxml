            <JFXTextArea fx:id="typeText" prefHeight="55.0" prefWidth="398.0"/>
            <Label text="LONGNAME" />
            <JFXTextArea fx:id="longnameText" prefHeight="55.0" prefWidth="398.0"/>
            <Label text="SHORTNAME" />
            <JFXTextArea fx:id="shortnameText" prefHeight="60.0" prefWidth="398.0"/>
